    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "This schema represents electric conductance, a measure of how easy the electric current flows in an electrical circuit.",

    "allOf": [
        {
            "$ref": "unit-value-1.x.json"
        },
        {
            "properties": {
                "unit": {
                    "references": [
                        {
                            "description": "The unit of measure of the element. Basic unit is Siemens (S).",

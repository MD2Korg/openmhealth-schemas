{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents the result of evaluating activity based on AutoSense and other sensor as a binary variable.",

    "type": "object",
    "references": [
        {
            "description": "The SNOMED code represents Physical activity (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/68130003"
        }
    ],
    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "category": {
            "type": "array",
            "items": [
                {
                    "type": "number"
                },
                {
                    "type": "string"
                }
            ]
        },
        "categorical_answer": {
            "type": "object",
            "properties": {
                "answers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/category"
                    },
                    "maxItems": 1
                }
            }
        }
    },
    "properties": {
        "activity_category": {
            "allOf": [
                {
                    "$ref": "#/definitions/categorical_answer"
                },
                {
                    "type": "object",
                    "properties": {
                        "answers": {
                            "items": {
                                "enum": [
                                    {
                                        "code": 0,
                                        "value": "no activity"
                                    },
                                    {
                                        "code": 1,
                                        "value": "activity"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        }
    },
    "required": [
        "activity_category",
        "effective_time_frame"
    ]
}
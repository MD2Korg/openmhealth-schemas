{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents the result of evaluating activity based on AutoSense and other sensor as a binary variable.",

    "type": "object",
    "references": [
        {
            "description": "The SNOMED code represents Physical activity (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/68130003"
        }
    ],
    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "activity_categorical": {
            "description": "If probability of stress above a predetermined threshold then 1, otherwise 0.",
            "type": "integer",
            "enum": [
                0,
                1
            ]
        },
        "effective_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": [
                        "date_time"
                    ]
                }
            ]
        }
    },
    "required": [
        "activity_categorical",
        "effective_time_frame"
    ]
}